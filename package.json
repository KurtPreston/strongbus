{
  "name": "strongbus",
  "version": "1.1.0",
  "description": "Strongly typed, battle-tested event bus",
  "keywords": [
    "bus",
    "message-bus",
    "event",
    "events",
    "event-bus",
    "message",
    "pubsub",
    "pub-sub",
    "emitter",
    "event-emitter"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "lint": "./node_modules/.bin/tslint -c tslint.json -p tsconfig.json",
    "test": "npm run build && ./node_modules/.bin/jasmine lib/**/*_spec.js",
    "validate": "npm run test && npm run lint",
    "install": "([ -d ./src ] && [ ! -d ./lib ] && mkdir lib && npm install . &&  npm run build) || echo ''",
    "docs": "./node_modules/.bin/typedoc --out ./docs --theme minimal --mode file --excludePrivate --exclude **/*/utils/*,**/*/utility.ts,**/*spec.ts ./src/index.ts",
    "prepare": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "Ethan Ferrari <github@ethanferrari.io>",
  "contributors": [
    "Josh Heyse <josh.heyse@gmail.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "core-decorators": "^0.20.0",
    "eventemitter3": "^3.1.0"
  },
  "devDependencies": {
    "@types/jasmine": "^3.3.0",
    "@types/node": "^10.17.3",
    "jasmine": "^3.3.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.15.0",
    "typescript": "^4.0.2"
  }
}
